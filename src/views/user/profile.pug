extends ../base
include ../mixins/video

block content
  .profile__data
    if user.avatarURL.includes("github")
      img.avatar(src=user.avatarURL, crossorigin)
    else
      img.avatar(src="/" + user.avatarURL, crossorigin)
    h3= user.name
  .video-grid
    each video in user.videos
      +video(video)
    else
      span.empty__message No videos found
